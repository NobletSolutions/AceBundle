{
    "name": "ns/ace-bundle",
    "type": "symfony-bundle",
    "description": "This bundle provides the ace admin bootstrap template",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Nathanael David Noblet",
            "email": "nathanael@noblet.ca"
        },
        {
            "name": "Mark Woynarski",
            "email": "mark.woynarski@nobletdesign.com"
        }
    ],
    "require": {
        "php":                      ">=7.0.8",
        "symfony/framework-bundle": "^4.0|^5.0",
        "symfony/form":             "^4.0|^5.0",
        "twig/twig":                "^2.0",
        "knplabs/knp-menu-bundle":  "^2.0|^3.0",
        "doctrine/common":          "^2.5|^2.6",
        "ext-json":                 "*"
    },
    "require-dev": {
        "lexik/form-filter-bundle": "^5.0",
        "phpunit/phpunit":          "^7.0"
    },
    "suggest": {
        "punkave/symfony2-file-uploader-bundle": "Allows for drag & drop or multiple file upload",
        "jms/translation-bundle":    "Handle xliff translations",
        "craue/formflow-bundle": "Provides multi-step forms for which we have a theme",
        "lexik/form-filter-bundle": "Form filtering"
    },
    "autoload": {
        "psr-4": { "NS\\AceBundle\\": "src" }
    },
    "autoload-dev": {
	    "psr-4": { "NS\\AceBundle\\Tests\\": "tests" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        }
    }
}
